<!DOCTYPE t:templates [
<!ENTITY hsize0 "10pt">
<!ENTITY hsize1 "12pt">
<!ENTITY hsize2 "14.4pt">
<!ENTITY hsize3 "17.28pt">
<!ENTITY hsize4 "20.736pt">
<!ENTITY hsize5 "24.8832pt">
<!ENTITY hsize0space "7.5pt"> <!-- 0.75 * hsize0 -->
<!ENTITY hsize1space "9pt"> <!-- 0.75 * hsize1 -->
<!ENTITY hsize2space "10.8pt"> <!-- 0.75 * hsize2 -->
<!ENTITY hsize3space "12.96pt"> <!-- 0.75 * hsize3 -->
<!ENTITY hsize4space "15.552pt"> <!-- 0.75 * hsize4 -->
<!ENTITY hsize5space "18.6624pt"> <!-- 0.75 * hsize5 -->
]>
<t:templates xmlns:t="http://nwalsh.com/docbook/xsl/template/1.0"
	     xmlns:param="http://nwalsh.com/docbook/xsl/template/1.0/param"
             xmlns:fo="http://www.w3.org/1999/XSL/Format"
             xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

<!-- ********************************************************************
     $Id: titlepage.templates.xml,v 1.22 2003/09/16 16:29:34 bobstayton Exp $
     ********************************************************************

     This file is part of the DocBook XSL Stylesheet distribution.
     See ../README or http://docbook.sf.net/ for copyright
     and other information.

     ******************************************************************** -->

<!-- ==================================================================== -->

<!-- NISP Design of the title page -->

  <t:titlepage t:element="book" t:wrapper="fo:block"
               font-family="{$title.fontset}">
    <t:titlepage-content t:side="recto">
      <biblioid
	     param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="&hsize4;"
	     space-before="0mm"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
      <title
	     t:named-template="division.title"
	     param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="&hsize4;"
	     space-before="10mm"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
      <volumenum
		text-align="center"
		font-size="&hsize3;"
		space-before="10mm"
		font-family="{$title.fontset}"/>
      <subtitle
		text-align="center"
		font-size="&hsize4;"
		space-before="10mm"
		font-family="{$title.fontset}"/>
      <mediaobject
        text-align="center"
        space-before="1mm"/>
      <revhistory
		text-align="center"
		font-size="&hsize3;"
		space-before="0mm"
	        font-weight="bold"
		font-family="{$title.fontset}"/>
<!--
    <corpauthor font-size="&hsize1;"
		  text-align="end"
		  keep-with-next="always"
		  space-before="30mm"/>
-->
      <productname
             param:node="ancestor-or-self::book[1]"
	     text-align="center"
	     font-size="&hsize4;"
	     space-before="6mm"
	     font-weight="bold"
	     font-family="{$title.fontset}"/>
    </t:titlepage-content>

  <t:titlepage-content t:side="verso"/>

  <t:titlepage-separator/>

  <t:titlepage-before t:side="recto"/>

  <t:titlepage-before t:side="verso"/>
</t:titlepage>

<!-- ==================================================================== -->

<!-- NISP style: Preface titles should be

     uppercased and centered -->


<t:titlepage t:element="preface" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title
	   t:force="1"
	   t:named-template="component.title"
	   param:node="ancestor-or-self::preface[1]"
	   margin-left="{$title.margin.left}"
	   font-size="&hsize3;"
	   font-family="{$title.fontset}"
	   font-weight="bold"
           space-before="10mm"
           text-transform="uppercase"
           text-align="center"/>
  </t:titlepage-content>
</t:titlepage>

<!-- ==================================================================== -->

<!-- NISP style: Chapter titles should be

           uppercased and centered -->

<t:titlepage t:element="chapter" t:wrapper="fo:block"
             font-family="{$title.fontset}">
  <t:titlepage-content t:side="recto" margin-left="{$title.margin.left}">
    <title t:named-template="component.title"
	   param:node="ancestor-or-self::chapter[1]"
 	   font-size="18pt"
	   font-weight="bold"
	   font-family="{$title.fontset}"
           space-before="10mm"
           text-transform="uppercase"
           text-align="center"/>
  </t:titlepage-content>
</t:titlepage>

<!-- ==================================================================== -->

<!-- NISP style: Appendix titles should be

           uppercased and centered -->

<t:titlepage t:element="appendix" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title t:named-template="component.title"
	   param:node="ancestor-or-self::appendix[1]"
	   margin-left="{$title.margin.left}"
	   font-size="18pt"
	   font-weight="bold"
	   font-family="{$title.fontset}"
           space-before="10mm"
           text-transform="uppercase"
           text-align="center"/>
  </t:titlepage-content>
</t:titlepage>

<!-- ==================================================================== -->


<t:titlepage t:element="sect1" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title margin-left="{$title.margin.left}"
	   font-family="{$title.fontset}"
           font-size="16pt"
           text-transform="uppercase"/>
  </t:titlepage-content>
</t:titlepage>

<t:titlepage t:element="sect2" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title
	   margin-left="{$title.margin.left}"
	   font-family="{$title.fontset}"/>
  </t:titlepage-content>
</t:titlepage>

<t:titlepage t:element="sect3" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title
	   margin-left="{$title.margin.left}"
	   font-family="{$title.fontset}"/>
  </t:titlepage-content>
</t:titlepage>

<t:titlepage t:element="sect4" t:wrapper="fo:block">
  <t:titlepage-content t:side="recto">
    <title
	   margin-left="{$title.margin.left}"
	   font-family="{$title.fontset}"/>
  </t:titlepage-content>
</t:titlepage>



<!-- ==================================================================== -->


<!-- NISP style: Table of Contents title should be 

     font-size: 17.28 point
     font-weight: bold
     alignment: centered      -->


  <t:titlepage t:element="table.of.contents" t:wrapper="fo:block">
    <t:titlepage-content t:side="recto">
      <title
	     t:force="1"
	     t:named-template="gentext"
	     param:key="'TableofContents'"
             space-before.minimum="1em"
             space-before.optimum="1.5em"
             space-before.maximum="2em"
	     space-after="0.5em"
	     margin-left="{$title.margin.left}"
	     font-size="16pt"
	     font-weight="bold"
	     font-family="{$title.fontset}"
             text-align="center"/>
    </t:titlepage-content>
  </t:titlepage>


<!-- ==================================================================== -->

</t:templates>
